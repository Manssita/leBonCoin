<% include partials/header.ejs %>
<% include partials/nav.ejs %>
    <div class="container in">
        <% for (var i = 0; i < prod.length; i++) { %>
            <div class="row bloc">
                <div class="col-lg-4 offerHome">
                    <a href="/annonce/<%= prod[i]._id %>"><img src="/uploads/<%= prod[i].photo[0].filename%>" /></a>
                </div>
                <div class="col-lg-8 offerHome">
                    <div class="row">
                        <div class="col-lg-8">
                            <p class="title"><a href="/annonce/<%= prod[i]._id %>"><%= prod[i].title%></a></p>
                            <p><%= prod[i].city%></p>
                            <p class="price"><%= prod[i].price%> &euro;</p>
                        </div>
                        <div class="d-flex justify-content-end col-lg-4">
                            <a class="linkFav" href="/favorites"><p class="fav"><i class="far fa-heart"></i></p>
                            <p class="favActive none"><i class="fas fa-heart"></i></p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
        <ul>
            <% for (var j = 1; j < count+1; j++) { %>
                <li><a href="/?p=<%= j %>"><%= j %></a></li>
                <% }%>
        </ul>
    </div> 
<% include partials/footer.ejs %>